{
  "manifest_version": 2,
  "name": "WaitBlock",
  "description": "Setup wait period for time-wasting sites. Reflect on your core values while waiting.",
  "version": "1.3.0",
  "minimum_chrome_version": "40",

  "browser_action": {
     "default_icon": "img/icon-popup.png"
  },

  "permissions": [
    "storage"
  ],
  "icons": { "128": "img/icon.png" },
  "web_accessible_resources": [
    "index.html"
  ],
  "background": {
    "scripts": [
      "js/underscore-1.8.3.min.js",
      "js/waitblock.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/waitblock.js",
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
